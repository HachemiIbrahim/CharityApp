<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CharityApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryVariant">@color/green_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_main</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="IconColor" parent="Theme.CharityApp">
        <item name="android:textColorSecondary">@color/green_main</item>
    </style>
    <style name="ProfileIconColor" parent="Theme.CharityApp">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
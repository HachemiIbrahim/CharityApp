<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFD"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.details.description.DescriptionFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/euclid_circular_b_medium"
        android:text="Building Hospital in Amizour"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/euclid_circular_b_medium"
        android:text="Description :"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10sp"
        android:text="description : Ehsan association has decided to launch this program that will benefit the wilaya of bejaia and speifically Amizour . people have been asking for it for so long because it would enhance their quality of life by a lot since they wont have to travel to Bejaia for  health care services. we all know how generous  algerian people are when it comes to helping others. Be one of them !" />

</LinearLayout>